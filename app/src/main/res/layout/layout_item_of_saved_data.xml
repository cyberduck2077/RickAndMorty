<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="20sp"
    android:layout_marginVertical="40sp"
    app:cardCornerRadius="30sp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|top"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgViewCard"
            android:layout_width="match_parent"
            android:layout_height="350sp"
            android:layout_marginHorizontal="10sp"
            android:layout_marginTop="10sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <View
            android:id="@+id/separete"
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:layout_marginTop="9sp"
            android:background="@drawable/separate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgViewCard" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/separete"
            android:orientation="vertical"
            android:padding="10dp">


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_card1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9sp"
            android:hint="text"
             />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_card2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:hint="text"

            app:layout_constraintTop_toBottomOf="@+id/txt_card1" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_card3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:hint="text"

            app:layout_constraintTop_toBottomOf="@+id/txt_card2" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_card4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:hint="text"

            app:layout_constraintTop_toBottomOf="@+id/txt_card3" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_card5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:hint="text"

            app:layout_constraintTop_toBottomOf="@+id/txt_card4" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_card6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:hint="text"

            app:layout_constraintTop_toBottomOf="@+id/txt_card5" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_card7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:hint="text"
            app:layout_constraintTop_toBottomOf="@+id/txt_card6" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/ic_baseline_delete_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>